<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
    <property>
        <name>dfs.replication</name>
        <value>1</value>
    </property>
    <property>
        <name>dfs.name.dir</name>
        <value><%= data_dir %>/dfs/name</value>
        <final>true</final>
    </property>
    <property>
        <name>dfs.data.dir</name>
        <value><%= data_dir %>/dfs/data</value>
        <final>true</final>
    </property>
    <property>
        <name>dfs.http.address</name>
        <value>http://<%= hostname %>:<%= dfs_http_address_port %></value>
    </property>
    <property>
        <name>dfs.datanode.address</name>
        <value><%= hostname %>:<%= dfs_datanode_address_port %></value>
    </property>
    <property>
        <name>dfs.datanode.ipc.address</name>
        <value><%= hostname %>:<%= dfs_datanode_ipc_address_port %></value>
    </property>
    <property>
        <name>dfs.datanode.http.address</name>
        <value>http://<%= hostname %>:<%= dfs_datanode_http_address_port %></value>
    </property>
    <property>
        <name>dfs.webhdfs.enabled</name>
        <value>true</value>
    </property>
</configuration>
